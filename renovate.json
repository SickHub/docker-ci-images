{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["kubernetes-sigs/kustomize"],
      "versionCompatibility": "^(?<compatibility>.*)/(?<version>.*)$"
    },
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "platformAutomerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.circleci/config.yml$",
        "^images.*/.*/Dockerfile$"
      ],
      "matchStrings": [
        "\\sdefault: (?<currentValue>.*?) # (?<datasource>.*?):(?<depName>.*?)\\n",
        "# (?<datasource>.*?):(?<depName>.*?)\\sARG .*?_VERSION=(?<currentValue>.*)\\n"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^.circleci/config.yml$",
        "^images.*/.*/Dockerfile$"
      ],
      "matchStrings": [
        "\\sdefault: (?<currentValue>.*?) # (?<datasource>.*?):(?<depName>.*?):(?<extractVersion>.*?)\\n",
        "# (?<datasource>.*?):(?<depName>.*?):(?<extractVersion>.*?)\\sARG .*?_VERSION=(?<currentValue>.*)\\n",
      ]
    }
  ]
}
